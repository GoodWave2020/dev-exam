<p id="notice"><%= notice %></p>

<h1><%= I18n.t("activerecord.attributes.property.properties") %></h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t("activerecord.attributes.property.name") %></th>
      <th><%= I18n.t("activerecord.attributes.property.rent") %></th>
      <th><%= I18n.t("activerecord.attributes.property.address") %></th>
      <th><%= I18n.t("activerecord.attributes.property.age") %></th>
      <th><%= I18n.t("activerecord.attributes.property.content") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.rent %>円</td>
        <td><%= property.address %></td>
        <td><%= property.age %>年</td>
        <td><%= property.content %></td>
        <td><%= link_to I18n.t("helpers.select.show"), property %></td>
        <td><%= link_to I18n.t("helpers.submit.edit"), edit_property_path(property) %></td>
        <td><%= link_to I18n.t("helpers.select.destroy"), property, method: :delete, data: { confirm: I18n.t('Are_you_sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t("activerecord.attributes.property.new_property_link"), new_property_path %>
